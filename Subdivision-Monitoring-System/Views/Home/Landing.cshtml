        <script>

            document.addEventListener("DOMContentLoaded", function () {
                const mbsigninBtn = document.getElementById("sign-in-btn"); // Mobile menu Sign In
                const signinBtn = document.getElementById("signin-btn"); // Other Sign In
                const popup = document.getElementById("login-popup");
                const closeBtn = document.querySelector(".close");

                function openPopup() {
                    popup.classList.remove("hidden");
                }

                if (signinBtn) signinBtn.addEventListener("click", openPopup);
                if (mbsigninBtn) mbsigninBtn.addEventListener("click", openPopup);

                closeBtn.addEventListener("click", function () {
                    popup.classList.add("hidden");
                });

                window.addEventListener("click", function (e) {
                    if (e.target === popup) {
                        popup.classList.add("hidden");
                    }
                });
            });

        </script>

